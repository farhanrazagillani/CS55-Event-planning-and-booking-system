@model IEnumerable<ShadiHallBookingSystem.Models.Admin>

@{
    ViewBag.Title = "Edit";
}

<table class="table table-bordered">
    <thead>
        <tr></tr>
        <tr>
            <th class="col-lg-2 col-md-2 col-sm-6 col-xs-8">Id</th>
            <th class="col-lg-2 col-md-2 col-sm-3 col-xs-8">Email</th>
            <th class="col-lg-2 col-md-2 col-sm-3 col-xs-4">Password</th>
            <th class="col-lg-2 col-md-2 col-sm-3 col-xs-4">Action</th>



        </tr>
    </thead>
    <tbody id="tablebody">
        @foreach (var n in Model)
        {
        <tr>
            <td class="col-lg-2 col-md-5 col-sm-6 col-xs-8">

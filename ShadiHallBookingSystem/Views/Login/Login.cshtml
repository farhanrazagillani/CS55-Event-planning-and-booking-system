
@{
    ViewBag.Title = "Login";
}
@{ 
    Layout = null;
}




<html>

<head>
    <link href="~/Css/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>

<body class="hold-transition skin-black sidebar-mini">
    <div class="row" style="margin-top: 50px">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel login panel-default">
                <div class="panel-body">
                    <div class="logo" style="padding-left: 100px">
                        <h1>SIGNIN </h1>

                    </div>
                    <form class="form-horizontal" role="form" method="POST">
                        <input type="hidden" name="_token" value="">
                        <div class="form-group">
                            <label class="col-md-12 "><b>Email</b></label>
                            <div class="col-md-12">
                                <input type="email" class="form-control" name="Email" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12 "><b>Password</b></label>
                            <div class="col-md-12">
                                <input type="password" class="form-control" name="Password" required>
                            </div>
                        </div>
                        <div>
                            <div>
                                <label style="color:red">@ViewBag.mesg</label>
                            </div>


                        </div>
                        <div class="form-group">
                            <div class="col-md-6 text-left">
                                <label>
                                    <input type="checkbox" name="RememberMe"> Remember me
                                </label>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit"
                                        class="btn btn-primary"
                                        style="margin-right: 15px;">
                                    Login
                                </button>
                                @*<span class="pull-right "> <a  href="/Login/Registration"> <b>Register</b></a> </span>*@

                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>




</html>


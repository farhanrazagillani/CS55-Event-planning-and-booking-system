@model ShadiHallBookingSystem.Models.Booking
@using (Html.BeginForm("edit", "User", FormMethod.Post))

{
    @Html.HiddenFor(a => a.B_ID)


    <div class="col-md-6">
        <div class="form-group">
            <input class="form-control" type="date" name="FromDate" id="FromDate" required">
            <span class="form-label">Check In</span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <input class="form-control" type="date" name="ToDate" id="ToDate" required>
            <span class="form-label">Check out</span>
        </div>
    </div>
    

    <div class="form-group">
        <button name="submit" type="submit" class="btn btn-lg btn-danger center-aligned" style="margin-top: 20px;">submit</button>
    </div>
}


@model IEnumerable<ShadiHallBookingSystem.Models.ShaadiHall>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx" class="no-js">
<head>
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="shortcut icon" href="img/fav.png">
    <!-- Author Meta -->
    <meta name="author" content="colorlib">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Travel</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    <!--
    CSS
    ============================================= -->
    <link rel="stylesheet" href="~/tem/css/linearicons.css">
    <link rel="stylesheet" href="~/tem/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/tem/css/bootstrap.css">
    <link rel="stylesheet" href="~/tem/css/magnific-popup.css">
    <link rel="stylesheet" href="~/tem/css/jquery-ui.css">
    <link rel="stylesheet" href="~/tem/css/nice-select.css">
    <link rel="stylesheet" href="~/tem/css/animate.min.css">
    <link rel="stylesheet" href="~/tem/css/owl.carousel.css">
    <link rel="stylesheet" href="~/tem/css/main.css">
</head>
<body>
    <header id="header"></header><!-- #header -->
    <!-- start banner Area -->
    <section class="about-banner relative">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                     MARQUEES
                    </h1>
                    <p class="text-white link-nav"><a href="/home/index">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="/admin/halls"> Marquees</a></p>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->
    <!-- Start destinations Area -->
    <section class="destinations-area section-gap">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="menu-content pb-40 col-lg-8">
                    <div class="title text-center">
                        <h1 class="mb-10">Popular Marquees</h1>
                        <p>We all live in an age that belongs to the young at heart. Life that is becoming extremely fast, day to.</p>
                    </div>
                </div>
            </div>
            <div class="row">


                @foreach (var img in Model)
                {   
                  


                <div class="col-lg-4">
                    <div class="single-destinations">
                        <div class="thumb">
                            <img src="@Url.Content(img.Image)" alt="">
                        </div>
                        <div class="details">
                            <h4 class="d-flex justify-content-between">
                                <span>@img.Name</span>
                                

                            </h4>
                            @foreach (var i in img.Shifts)
                            {
                                var count = 0;

                                var a = i.Sh_ID;
                                var h = 0;

                        <ul class="package-list">
                            <li class="d-flex justify-content-between align-items-center">
                                <span>@i.Name</span>

                               

                                @foreach (var b in (from c in i.Bookings select c).Reverse())

                                            {
                                                if (h == 0)
                                                {
                                                    h++;
                                                    if (b.Sh_ID == a)
                                                    {

                                                        if (b.ToDate < DateTime.Now)
                                                        {

                                                            count++;
                                <a href="/home/hallDetails/@b.Sh_ID" class="price-btn">@i.Price <small>per head</small></a>
                                            }
                                            else
                                            {
                                                count++;
                                            <a ><h4 class="text-italic">Booked&nbsp;</h4><h6> till&nbsp; @b.ToDate.Day-@b.ToDate.Month-@b.ToDate.Year</h6></a>

                                            }


                                        }


                                        else
                                        {
                                            count++;
                                            <a href="/home/hallDetails/@b.Sh_ID" class="price-btn">@i.Price <small>per head</small></a>

                                        }

                                    }

                                }
                                @if (count == 0)
                                {

                                            <a href="/home/hallDetails/@i.Sh_ID" class="price-btn"> @i.Price <small>per head</small></a>
                                }
                            </li>


                        </ul>

                            }
                        </div>
                    </div>
                </div>





                }



                
                

                






            </div>
        </div>
    </section>
    <!-- End destinations Area -->
    <!-- Start home-about Area -->
    <section class="home-about-area">
        <div class="container-fluid">
            <div class="row align-items-center justify-content-end">
                <div class="col-lg-6 col-md-12 home-about-left">
                    <h1>
                        Did not find your Package? <br>
                        Feel free to ask us. <br>
                        We‘ll make it for you
                    </h1>
                    <p>
                        inappropriate behavior is often laughed off as “boys will be boys,” women face higher conduct standards especially in the workplace. That’s why it’s crucial that, as women, our behavior on the job is beyond reproach. inappropriate behavior is often laughed.
                    </p>
                   
                </div>
                <div class="col-lg-6 col-md-12 home-about-right no-padding">
                    <img class="img-fluid" src="img/hotels/about-img.jpg" alt="">
                </div>
            </div>
        </div>
    </section>
    <!-- End home-about Area -->
    <!-- start footer Area -->
    <footer class="footer-area section-gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-3  col-md-6 col-sm-6">
                    <div class="single-footer-widget">

                       
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                       
                          
                <div class="col-lg-3  col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        
                                <div class="mt-10 info"></div>
                            </form>
                        </div>
                    </div>
                </div>
               
            </div>
            
    </footer>
    <!-- End footer Area -->
    <script src="~/tem/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="~/tem/js/popper.min.js"></script>
    <script src="~/tem/js/vendor/bootstrap.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBhOdIF3Y9382fqJYt5I_sswSrEw5eihAA"></script>
    <script src="~/tem/js/jquery-ui.js"></script>
    <script src="~/tem/js/easing.min.js"></script>
    <script src="~/tem/js/hoverIntent.js"></script>
    <script src="~/tem/js/superfish.min.js"></script>
    <script src="~/tem/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/tem/js/jquery.magnific-popup.min.js"></script>
    <script src="~/tem/js/jquery.nice-select.min.js"></script>
    <script src="~/tem/js/owl.carousel.min.js"></script>
    <script src="~/tem/js/mail-script.js"></script>
    <script src="~/tem/js/main.js"></script>
</body>
</html>
